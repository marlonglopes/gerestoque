<%= form_for(@item) do |f| %>

	<%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :produto_id %><br />
	<p><%=@item.produto.descricao%></p>
  </div>
  <div class="field">
    <%= f.label :marca_id %><br />
  	<p><%=@item.marca.nome%></p>
  </div>
  <div class="field">
    <%= f.label :parecer %><br />
	 <%= f.select  "parecer_id",  pareceres.map { |p| [ p.descricao, p.id ]}, {:include_blank => ''}%>
  </div>

  <div class="actions">
    <%= f.submit @item.new_record? ? "Salvar" : "Atualizar"%>
  </div>
<% end %>
